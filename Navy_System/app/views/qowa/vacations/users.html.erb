<table style="width: 60%; height: 60%; float:left; margin-top: 30px;
margin-left: 130px;" class="table table-bordered">
	<tr>
		<th><center>اسم المستخدم</center></th>
		<th><center> الرقم العسكرى</center></th>
		<th><center> المجموعة </center></th>
		<th><center>تاريخ التجنيد  </center></th>
		<th><center>تاريخ الضم</th>
		<th><center>تاريخ التسليم</center></th>
		<th><center>ملاحظات</center></th>
		<th colspan='3'></th>
	</tr>

	<% @mostkhdmeen_users.each do |user| %>
	<tr>
		<td><center><%= user.name %></center></td>
		<td><center><%= "#{user.military_number}" %></center></td>
		<td><center><%= "#{Group.find_by_id(user.group_id).name}" %></td>
		<td><center><%= "#{user.tag_date}" %></center></td>
		<td><center><%= "#{user.start_date}" %></center></td>
		<td><center><%= "#{user.tas_date}" %></center></td>
		<td><center><%= "#{user.note}" %></center></td>
		
		<td><center><button class="btn btn-success"><%= link_to 'تعديل', edit_mostkhdmeen_user_path(user) %></button></center></td>
		<td><center><button class="btn btn-danger"><%= link_to 'حذف', mostkhdmeen_user_path(user), method: :delete, data: { confirm: 'حذف المستخدم ؟' } %></center></button></td>
		<td><center><button class="btn btn-info"><%= link_to 'بيان أجازات', "/qowa/vacations/user_vacations?user_id=#{user.id}" %></center></button></td>

	</tr>
	<% end %>
</table>