  	</div>
  
  <div class="field">
    <%= f.label "كلمة المرور" %>
    <%= f.password_field :password, :class=>"user_form_field" %>
  </div>
  


	<div class="field">
	<%= f.label "رقم التلفون" %>
	<%= f.text_field :phone, :class=>"user_form_field" %>
  </div>
  
<div class="field">
	<%= f.label "ملاحظات" %>
	<%= f.text_field :note, :class=>"user_form_field" %>
  </div>
	
  <div class="field">
    <%= f.label "المجموعة" %>
	<%= f.select :group_id, options_from_collection_for_select(@groups, "id", "name",@mostkhdmeen_user.group_id), :class=>"user_form_field", :prompt => '-- اختر مجموعة --', %> 
  </div>
  
  
  
  <div class="modal-footer" >
  <center>
  	<%= f.submit @edit_flag?"حفظ":"تسجيل المستخدم" , :class=>"btn-large btn-primary"  %>
