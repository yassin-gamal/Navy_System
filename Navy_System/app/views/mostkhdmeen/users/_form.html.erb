<%= form_for([:mostkhdmeen,@mostkhdmeen_user], :html=>{:style=>"margin-right:400px;margin-top:50px; width:400px;", :class=>"well" }) do |f| %>
  <% if @mostkhdmeen_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mostkhdmeen_user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @mostkhdmeen_user.errors.full_messages.each do |msg| %>
